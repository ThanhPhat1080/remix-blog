{
  "name": "blog",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "tailwindcss -m -i ./app/styles/tailwind.css -o ./app/styles/globals.css --minify & remix build",
    "build:remix": "remix build",
    "dev": "remix dev",
    "dev:hmr": "remix dev -c \"node ./server.js\"",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "hook": "pnpm lint && pnpm format:check",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "prepare": "husky install",
    "start": "remix-serve build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:push": "prisma push",
    "prisma:gui": "prisma studio"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/api",
    "/coverage",
    ".eslintrc.js",
    "tailwind.config.js",
    "server.js",
    "remix.config.js"
  ],
  "dependencies": {
    "@builder.io/partytown": "^0.8.1",
    "@prisma/client": "5.5.2",
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@vercel/remix": "2.0.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "highlight.js": "^11.9.0",
    "isbot": "^3.6.1",
    "marked": "^1.2.5",
    "marked-custom-heading-id": "^2.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-image": "^1.4.0",
    "sanitize-html": "^2.11.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.0.1",
    "@remix-run/eslint-config": "^2.0.1",
    "@remix-run/serve": "^2.0.1",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^14.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/marked": "^6.0.0",
    "@types/node": "20.2.5",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.2.4",
    "@types/sanitize-html": "^2.9.4",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.4",
    "c8": "^7.11.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^9.18.3",
    "husky": "^8.0.0",
    "jest": "^29.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^5.5.2",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.0",
    "vite": "^4.2.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0"
  },
  "engines": {
    "node": ">=16"
  }
}
